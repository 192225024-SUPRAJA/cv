import math

# Given values
total_pixels = 640000
aspect_ratio_width = 7
aspect_ratio_height = 3
x = math.sqrt(total_pixels / (aspect_ratio_width * aspect_ratio_height))
width = int(aspect_ratio_width * x)
height = int(aspect_ratio_height * x)
image_size_bytes = total_pixels * 1 # 1 byte per pixel for grayscale

print(f"Image dimensions: {width}x{height}")
print(f"Image size: {image_size_bytes} bytes")
